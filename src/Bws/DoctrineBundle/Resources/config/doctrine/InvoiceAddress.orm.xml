<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Bws\DoctrineBundle\Entity\InvoiceAddress" table="invoice_address">
    <indexes>
      <index name="customer_id_idx" columns="customer_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="firstName" type="string" column="first_name" length="45" nullable="true"/>
    <field name="lastName" type="string" column="last_name" length="45" nullable="true"/>
    <field name="street" type="string" column="street" length="45" nullable="true"/>
    <field name="houseNumber" type="string" column="house_number" length="45" nullable="true"/>
    <field name="postCode" type="string" column="post_code" length="45" nullable="true"/>
    <field name="city" type="string" column="city" length="45" nullable="true"/>
    <field name="country" type="string" column="country" length="45" nullable="true"/>
    <many-to-one field="customer" target-entity="Customer">
      <join-columns>
        <join-column name="customer_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
